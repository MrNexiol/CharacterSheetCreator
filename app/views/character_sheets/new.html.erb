<div data-controller="new-character-sheet">
  <%= simple_form_for [@user, @sheet] do |f| %>
    <% partial = render(partial: 'skills', locals: { form: f }) %>
    <%= f.input :name %>
    <%= f.input :experience, readonly: true, input_html: {'data-target': 'new-character-sheet.exp', class: 'bg-transparent'} %>
    <div class="grid grid-cols-6 gap-4">
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :brawn %>
            <%= f.input :brawn, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.brawn', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="0" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="0" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :brawn %>
        </div>
      </div>
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :determination %>
            <%= f.input :determination, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.deter', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="1" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="1" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :determination %>
        </div>
      </div>
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :intelligence %>
            <%= f.input :intelligence, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.intel', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="2" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="2" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :intelligence %>
        </div>
      </div>
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :perception %>
            <%= f.input :perception, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.perce', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="3" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="3" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :perception %>
        </div>
      </div>
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :dexterity %>
            <%= f.input :dexterity, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.dexte', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="4" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="4" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :dexterity %>
        </div>
      </div>
      <div class="bg-white rounded-md shadow-lg py-2 px-4">
        <div class="flex flex-col">
          <div class="flex flex-justify-start">
            <%= f.label :agility %>
            <%= f.input :agility, label: false, readonly: true, input_html: {'data-target': 'new-character-sheet.agili', class: 'bg-transparent w-10 cursor-default select-none outline-none'} %>
            <button type="button" data-id="5" data-target="new-character-sheet.minus" data-action="click -> new-character-sheet#changeStat">-</button>
            <button type="button" data-id="5" data-target="new-character-sheet.plus" data-action="click -> new-character-sheet#changeStat">+</button>
          </div>
          <%= yield :agility %>
        </div>
      </div>
    </div>
    <br/><h1 class="font-black">Skille</h1>
    <%= partial %>
    <%= f.button :submit %>
  <% end %>
</div>