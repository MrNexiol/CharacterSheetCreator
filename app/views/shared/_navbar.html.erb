<div class="mx-auto px-6 py-4 bg-black text-white">
  <%= link_to 'Home', root_path, class: 'pr-4' %>
  <%= link_to 'Users', users_path %>
  <% if logged_in? %>
    <%= link_to 'Logout', logout_path, method: :delete, class: 'float-right pl-4' %>
  <% else %>
    <%= link_to 'Login', login_path, class: 'float-right pl-4' %>
  <% end %>
  <% if logged_in? %>
    <%= link_to "+", new_user_character_sheet_path(current_user), class: 'float-right' %>
  <% end %>
</div>